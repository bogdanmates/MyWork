@using EPiServer.Core
@using EPiServer.Web.Mvc.Html

@model EPiServerSiteCMS.Models.Pages.MyProfilePage

<div class="container" style="min-height: 500px">
    <div class="text-capitalize text-center" style="padding-top: 30px; font-size:large">
        @Html.PropertyFor(m=>m.Title)
    </div>
    <div class="row-fluid" style="padding-top: 50px">
        <div class="col-md-2" style="padding-top: 30px">
            <div class="center-block" style="border: solid black 2px; min-height: 150px; min-width: 150px;">
                @Html.PropertyFor(m => Model.LeftMenu)
            </div>
        </div>
        <div class="col-md-10">
            @Html.PropertyFor(m=>m.MainContentArea)
        </div>
    </div>
</div>
